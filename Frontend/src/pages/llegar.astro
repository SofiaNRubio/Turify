---
import MainLayout from "../layouts/MainLayout.astro";
import LlegarComponent from "../components/Llegar.astro";
import { apiFetch } from "../utils/api";
import "../style/hospedaje.css";

// Definir tipos TypeScript
interface Empresa {
    id: string;
    nombre: string;
    descripcion: string | null;
    email: string | null;
    telefono: string | null;
    sitio_web: string | null;
    direccion: string;
    latitud: number | null;
    longitud: number | null;
    img_url: string | null;
    categoria_id: string | null;
    created_at: string;
}

interface Categoria {
    id: string;
    nombre: string;
}

// Obtener parámetros de la URL
const url = new URL(Astro.request.url);
const categoriaId = url.searchParams.get("categoria");

// Si hay un parámetro de categoría, obtener los servicios filtrados
let serviciosFiltrados: Empresa[] = [];
let categoriaSeleccionada: Categoria | null = null;

if (categoriaId) {
    try {
        // Obtener la categoría
        const responseCategoria = await apiFetch(`/categorias/${categoriaId}`);
        if (responseCategoria.ok) {
            categoriaSeleccionada = await responseCategoria.json();
        }

        // Obtener todas las empresas
        const responseEmpresas = await apiFetch("/empresas");
        if (responseEmpresas.ok) {
            const todasLasEmpresas: Empresa[] = await responseEmpresas.json();
            serviciosFiltrados = todasLasEmpresas.filter(
                (empresa) => empresa.categoria_id === categoriaId
            );
        }
    } catch (error) {
        console.error("Error al obtener servicios filtrados:", error);
    }
}
---

<MainLayout>
    {
        categoriaId && categoriaSeleccionada ? (
            <div class="servicios-filtrados">
                {serviciosFiltrados.length > 0 ? (
                    <div class="empresas-grid">
                        {serviciosFiltrados.map((servicio: Empresa) => (
                            <div class="empresa-card">
                                <div class="imagen-container">
                                    {servicio.img_url ? (
                                        <img
                                            src={servicio.img_url}
                                            alt={servicio.nombre}
                                        />
                                    ) : (
                                        <div class="placeholder">
                                            <svg
                                                width="40"
                                                height="40"
                                                fill="currentColor"
                                                viewBox="0 0 24 24">
                                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" />
                                            </svg>
                                        </div>
                                    )}
                                </div>
                                <div class="card-content">
                                    <span class="badge-categoria">
                                        {categoriaSeleccionada.nombre}
                                    </span>
                                    <h3>{servicio.nombre}</h3>
                                    {servicio.descripcion && (
                                        <p class="descripcion">
                                            {servicio.descripcion}
                                        </p>
                                    )}
                                    <div class="info-empresa">
                                        {servicio.direccion && (
                                            <div>
                                                <svg
                                                    width="16"
                                                    height="16"
                                                    fill="none"
                                                    viewBox="0 0 24 24">
                                                    <path
                                                        fill="#059669"
                                                        d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                                                    />
                                                </svg>
                                                {servicio.direccion}
                                            </div>
                                        )}
                                        {servicio.telefono && (
                                            <div>
                                                <svg
                                                    width="16"
                                                    height="16"
                                                    fill="none"
                                                    viewBox="0 0 24 24">
                                                    <path
                                                        fill="#059669"
                                                        d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1 1 0 011.11-.21c1.21.49 2.53.76 3.88.76a1 1 0 011 1V20a1 1 0 01-1 1C7.61 21 3 16.39 3 11a1 1 0 011-1h3.5a1 1 0 011 1c0 1.35.27 2.67.76 3.88a1 1 0 01-.21 1.11l-2.2 2.2z"
                                                    />
                                                </svg>
                                                {servicio.telefono}
                                            </div>
                                        )}
                                        {servicio.email && (
                                            <div>
                                                <svg
                                                    width="16"
                                                    height="16"
                                                    fill="none"
                                                    viewBox="0 0 24 24">
                                                    <path
                                                        fill="#059669"
                                                        d="M12 8a4 4 0 100 8 4 4 0 000-8zm0 10c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6z"
                                                    />
                                                </svg>
                                                {servicio.email}
                                            </div>
                                        )}
                                    </div>
                                    <div class="acciones">
                                        {servicio.sitio_web && (
                                            <a
                                                href={servicio.sitio_web}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="btn-sitio-web">
                                                Visitar sitio web
                                            </a>
                                        )}
                                        <a
                                            href={`/llegar/${servicio.id}`}
                                            class="btn-ver-detalle">
                                            Ver detalles
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                ) : (
                    <div class="no-servicios">
                        <p>
                            No se encontraron servicios de{" "}
                            {categoriaSeleccionada.nombre} disponibles.
                        </p>
                    </div>
                )}
            </div>
        ) : (
            <LlegarComponent />
        )
    }
</MainLayout>

<style>
    .servicios-filtrados {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .volver-btn {
        display: inline-flex;
        align-items: center;
        color: #059669;
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 1rem;
        transition: color 0.3s ease;
    }

    .volver-btn:hover {
        color: #047857;
    }

    .header-llegada {
        text-align: center;
        margin-bottom: 2rem;
    }

    .header-llegada h2 {
        color: #059669;
        font-size: 2rem;
        margin: 0;
    }

    .no-servicios {
        text-align: center;
        padding: 3rem;
        color: #666;
    }

    @media (max-width: 768px) {
        .servicios-filtrados {
            padding: 1rem;
        }

        .header-llegada h2 {
            font-size: 1.5rem;
        }
    }
</style>
