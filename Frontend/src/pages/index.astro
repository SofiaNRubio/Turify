---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import RecommendedCarousel from "../components/RecommendedCarousel.astro";
import CTA from "../components/CTA.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/logo-turify.png" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet"
              href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        />
        <div class="hero" style="margin-top: 60px;">
            <img src="/actividades/laberinto.png" alt="San Rafael" class="hero-img" />
            <div class="hero-text">
                <h1>Turify</h1>
                <h2>Vivi San Rafael</h2>
            </div>
        </div>
</header>
        <title>Turify | Vivi San Rafael</title>
    </head>
    <body>
        <Header />
        <main>
            <section class="actividades">
                <h3>Actividades Disponibles</h3>
                <div class="cards">
                    <div class="card">
                        <img src="/actividades/airelibre.jpg" alt="Actividad 1" />
                        <h4>Actividades al aire libre</h4>
                        <p>Aventura y adrenalina entre las montañas.</p>
                    </div>
                    <div class="card">
                        <img src="/actividades/gastronomia.jpg" alt="Actividad 2" />
                        <h4>Gastronomía</h4>
                        <p>Deleitate con la mejor comida de la región.</p>
                    </div>
                    <div class="card">
                        <img src="/actividades/bodegas.jpg" alt="Actividad 3" />
                        <h4>Bodegas</h4>
                        <p>Los mejores vinos del país.</p>
                    </div>
                    <div class="card">
                        <img src="/actividades/espaciosociales.jpg" alt="Actividad 4" />
                        <h4>Espacios Sociales</h4>
                        <p>Disfrutá la ciudad sanrafaelina.</p>
                </div>
            </section>
            <RecommendedCarousel />
            <CTA />
            <section class="historia">
                <div class="historia-content">
                    <h3>Historia de Nuestro Ciudad</h3>
                    <p>
                        San Rafael es una ciudad con una rica historia y tradiciones. Fundada en el siglo XIX, es reconocida por su hospitalidad, paisajes y actividades turísticas.
                    </p>
                </div>
                <div class="historia-mapa">
                    <div id="map" style="height: 250px; width: 100%; border-radius: 8px; z-index: 0;"></div>
                </div>
            </section>

            <section class="emergencias">
                <h3>Servicios de Emergencias <span class="badge">Urgente</span></h3>
                <div class="emergencias-cards">
                    <div class="emergencia-card">
                        <h4>Policía</h4>
                        <p>101</p>
                    </div>
                    <div class="emergencia-card">
                        <h4>Bomberos</h4>
                        <p>100</p>
                    </div>
                    <div class="emergencia-card">
                        <h4>Ambulancia</h4>
                        <p>107</p>
                    </div>
                </div>
            </section>

            <section class="contacto">
                <div class="contacto-form">
                    <h3>Contáctanos</h3>
                    <form>
                        <input type="text" placeholder="Nombre" required />
                        <input type="email" placeholder="Email" required />
                        <textarea placeholder="Mensaje" required></textarea>
                        <button type="submit">Enviar</button>
                    </form>
                </div>
                <div class="contacto-info">
                    <h4>Información de Contacto</h4>
                    <ul>
                        <li>Tel: (0260) 123-4567</li>
                        <li>Email: info@turify.com</li>
                        <li>Dirección: Av. San Martín 123</li>
                    </ul>
                </div>
            </section>
        </main>
        <Footer />

        <script 
            src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" 
            defer
        ></script>
        <script defer>
        document.addEventListener('DOMContentLoaded', function () {
            var map = L.map('map').setView([-34.617, -68.330], 13);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            L.marker([-34.617, -68.330]).addTo(map)
            .bindPopup('San Rafael, Mendoza')
            .openPopup();

            setTimeout(function () {
            map.invalidateSize();
            }, 100);
        });
        </script>
    </body>
</html>

<style>
    html, body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: 'Segoe UI', Arial, sans-serif;
        background: #f8faf7;
        color: #222;
    }
    main {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }
    .hero {
        position: relative;
        width: 100%;
        height: 180px;
        overflow: hidden;
    }
    .hero-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        filter: brightness(0.7);
    }
    .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        text-align: center;
    }
    .hero-text h1 {
        font-size: 2.5rem;
        margin: 0;
        font-weight: bold;
        letter-spacing: 2px;
    }
    .hero-text h2 {
        font-size: 1.3rem;
        margin: 0;
        font-weight: 400;
    }
    .actividades {
        margin-bottom: 2rem;
        text-align: center;
    }
    .actividades h3 {
        color: #2e6c4d;
        margin-bottom: 1rem;
    }
    .cards {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        width: 220px;
        padding: 1rem;
        text-align: center;
        transition: box-shadow 0.2s;
    }
    .card img {
        width: 100%;
        height: 110px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 0.5rem;
    }
    .card h4 {
        margin: 0.5rem 0 0.3rem 0;
        color: #2e6c4d;
    }
    .historia {
        display: flex;
        background: #eaf7f0;
        border-radius: 12px;
        padding: 2rem 1rem;
        margin-bottom: 2rem;
        gap: 2rem;
        align-items: center;
        flex-wrap: wrap;
    }
    .historia-content {
        flex: 2;
        min-width: 220px;
    }
    .historia-content h3 {
        margin-top: 0;
        color: #2e6c4d;
    }
    .historia-mapa {
        flex: 1;
        min-width: 180px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    .emergencias {
        background: #ffeaea;
        border-radius: 12px;
        padding: 1.5rem 1rem;
        margin-bottom: 2rem;
        text-align: center;
    }
    .emergencias h3 {
        color: #d32f2f;
        margin-bottom: 1rem;
    }
    .badge {
        background: #d32f2f;
        color: #fff;
        border-radius: 8px;
        padding: 0.2em 0.7em;
        font-size: 0.8em;
        margin-left: 0.5em;
        vertical-align: middle;
    }
    .emergencias-cards {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    .emergencia-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.06);
        width: 180px;
        padding: 1rem;
        text-align: center;
    }
    .emergencia-card h4 {
        margin: 0.3rem 0;
        color: #d32f2f;
    }
    .contacto {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        background: #fff;
        border-radius: 12px;
        padding: 2rem 1rem;
        margin-bottom: 2rem;
        justify-content: space-between;
    }
    .contacto-form {
        flex: 2;
        min-width: 220px;
    }
    .contacto-form h3 {
        margin-top: 0;
        color: #2e6c4d;
    }
    .contacto-form form {
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
    }
    .contacto-form input,
    .contacto-form textarea {
        padding: 0.6rem;
        border: 1px solid #cde3d2;
        border-radius: 6px;
        font-size: 1rem;
        resize: none;
    }
    .contacto-form button {
        background: #2e6c4d;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 0.7rem;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s;
    }
    .contacto-form button:hover {
        background: #24543a;
    }
    .contacto-info {
        flex: 1;
        min-width: 180px;
        background: #eaf7f0;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1.5rem;
        height: fit-content;
    }
    .contacto-info h4 {
        margin-top: 0;
        color: #2e6c4d;
    }
    .contacto-info ul {
        list-style: none;
        padding: 0;
        margin: 0;
        font-size: 1rem;
    }
    .contacto-info li {
        margin-bottom: 0.5rem;
    }
    
    @media (max-width: 900px) {
        .cards, .emergencias-cards, .contacto {
            flex-direction: column;
            align-items: center;
        }
        .historia {
            flex-direction: column;
            align-items: flex-start;
        }
    }

    .nav-auth button,
.clerk-sign-in-button {
    background: #2e6c4d;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0.6rem 1.2rem;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 8px rgba(46,108,77,0.08);
}
.nav-auth button:hover,
.clerk-sign-in-button:hover {
    background: #24543a;
}
</style>