---
import MainLayout from "../../layouts/MainLayout.astro";
import FiltroUbicacion from "../../components/FiltroUbicacion.astro";
import { apiFetch } from "../../utils/api";

// Definir tipos TypeScript
interface Empresa {
    id: string;
    nombre: string;
    descripcion: string | null;
    email: string | null;
    telefono: string | null;
    sitio_web: string | null;
    direccion: string;
    latitud: number | null;
    longitud: number | null;
    img_url: string | null;
    categoria_id: string | null;
    created_at: string;
}

interface Categoria {
    id: string;
    nombre: string;
}

interface Atractivo {
    id: string;
    nombre: string;
    descripcion: string | null;
    direccion: string;
    latitud: number | null;
    longitud: number | null;
    img_url: string | null;
    empresa_id: string | null;
    categoria_id: string | null;
    created_at: string;
    distrito: string | null;
}

// Función para obtener las categorías desde el backend
async function obtenerCategorias(): Promise<Categoria[]> {
    try {
        const categoriasResponse = await apiFetch("/categorias");
        if (!categoriasResponse.ok) {
            throw new Error("Error al obtener categorías");
        }
        return await categoriasResponse.json();
    } catch (error) {
        console.error("Error al obtener categorías:", error);
        return [];
    }
}

// Función para obtener una empresa por ID
async function obtenerEmpresa(id: string): Promise<Empresa | null> {
    try {
        const empresaResponse = await apiFetch(`/empresas/${id}`);
        if (!empresaResponse.ok) {
            return null;
        }
        return await empresaResponse.json();
    } catch (error) {
        console.error("Error al obtener empresa:", error);
        return null;
    }
}

// Función para obtener los atractivos de una empresa
async function obtenerAtractivos(): Promise<Atractivo[]> {
    try {
        const atractivosResponse = await apiFetch("/atractivos");
        if (!atractivosResponse.ok) {
            throw new Error("Error al obtener atractivos");
        }
        return await atractivosResponse.json();
    } catch (error) {
        console.error("Error al obtener atractivos:", error);
        return [];
    }
}

// Obtener el ID de la empresa desde los parámetros de la URL
const { emergencias: empresaId } = Astro.params;

if (!empresaId) {
    return Astro.redirect("/emergencias");
}

// Obtener datos
const empresa = await obtenerEmpresa(empresaId);
const categorias = await obtenerCategorias();
const todosLosAtractivos = await obtenerAtractivos();

// Si no se encuentra la empresa, redirigir
if (!empresa) {
    return Astro.redirect("/emergencias");
}

// Filtrar atractivos de esta empresa
const atractivosEmpresa = todosLosAtractivos.filter(
    (atractivo) => atractivo.empresa_id === empresaId
);

// Obtener parámetros de la URL para el filtro de distrito
const url = new URL(Astro.request.url);
const distritoFiltro = url.searchParams.get("distrito");
const distritosSeleccionados = distritoFiltro ? distritoFiltro.split(",") : [];

// Obtener distritos únicos de los atractivos de la empresa
const distritos = Array.from(new Set(atractivosEmpresa.map(a => a.distrito).filter((d): d is string => !!d)));

// Filtrar atractivos por distrito si se especifica
let atractivosFiltrados = atractivosEmpresa;
if (distritosSeleccionados.length > 0) {
    atractivosFiltrados = atractivosEmpresa.filter((atractivo) =>
        distritosSeleccionados.some((d) => atractivo.distrito && atractivo.distrito.toLowerCase().includes(d.toLowerCase()))
    );
}

// Función para obtener el nombre de la categoría
function obtenerNombreCategoria(categoriaId: string | null): string {
    if (!categoriaId) return "Sin categoría";
    const categoria = categorias.find((cat) => cat.id === categoriaId);
    return categoria ? categoria.nombre : "Sin categoría";
}
---

<MainLayout>
    <section class="empresa-detalle emergencia-detalle">
        <div class="container">
            <!-- Header de la empresa -->
            <div class="empresa-header">
                <div class="imagen-principal">
                    {
                        empresa.img_url ? (
                            <img
                                src={empresa.img_url}
                                alt={empresa.nombre}
                                onerror="this.style.display='none'; this.parentElement.querySelector('.placeholder-empresa').style.display='flex';"
                            />
                        ) : null
                    }
                    <div
                        class="placeholder-empresa"
                        style={empresa.img_url
                            ? "display: none;"
                            : "display: flex;"}>
                        <svg
                            width="120"
                            height="120"
                            viewBox="0 0 120 120"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg">
                            <rect
                                width="120"
                                height="120"
                                rx="24"
                                fill="#e0e0e0"></rect>
                            <path d="M30 90L52.5 60L75 90H30Z" fill="#bdbdbd"
                            ></path>
                            <circle cx="45" cy="48" r="9" fill="#bdbdbd"
                            ></circle>
                        </svg>
                    </div>
                </div>

                <div class="info-principal">
                    <div class="breadcrumb">
                        <a href="/">Inicio</a>
                        <span>›</span>
                        <a href="/emergencias">Servicios de Emergencia</a>
                        <span>›</span>
                        <span>{empresa.nombre}</span>
                    </div>

                    <div class="badge-categoria emergencia">
                        {obtenerNombreCategoria(empresa.categoria_id)}
                    </div>

                    <h1>{empresa.nombre}</h1>

                    <p class="descripcion-principal">
                        {
                            empresa.descripcion ||
                                "Servicio de emergencia ubicado en San Rafael, Mendoza."
                        }
                    </p>

                    <div class="contacto-info">
                        <div class="direccion">
                            <svg
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22S19 14.25 19 9C19 5.13 15.87 2 12 2ZM12 11.5C10.62 11.5 9.5 10.38 9.5 9S10.62 6.5 12 6.5S14.5 7.62 14.5 9S13.38 11.5 12 11.5Z"
                                    fill="currentColor"></path>
                            </svg>
                            <span>{empresa.direccion}</span>
                        </div>

                        {empresa.telefono && (
                            <div class="telefono">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M6.62 10.79a15.053 15.053 0 006.59 6.59l2.2-2.2a1 1 0 011.11-.21c1.21.49 2.53.76 3.88.76a1 1 0 011 1V20a1 1 0 01-1 1C7.61 21 3 16.39 3 11a1 1 0 011-1h3.5a1 1 0 011 1c0 1.35.27 2.67.76 3.88a1 1 0 01-.21 1.11l-2.2 2.2z"
                                        fill="currentColor"></path>
                                </svg>
                                <a href={`tel:${empresa.telefono}`}>{empresa.telefono}</a>
                            </div>
                        )}

                        {empresa.email && (
                            <div class="email">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M20 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z"
                                        fill="currentColor"></path>
                                </svg>
                                <a href={`mailto:${empresa.email}`}>{empresa.email}</a>
                            </div>
                        )}

                        {empresa.sitio_web && (
                            <div class="sitio-web">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M12 2C6.48 2 2 6.48 2 12S6.48 22 12 22 22 17.52 22 12 17.52 2 12 2ZM11 19.93C7.05 19.44 4 16.08 4 12C4 11.38 4.08 10.79 4.21 10.21L9 15V16C9 17.1 9.9 18 11 18V19.93ZM17.9 17.39C17.64 16.58 16.9 16 16 16H15V13C15 12.45 14.55 12 14 12H8V10H10C10.55 10 11 9.55 11 9V7H13C14.1 7 15 6.1 15 5V4.59C17.93 5.78 20 8.65 20 12C20 14.08 19.2 15.97 17.9 17.39Z"
                                        fill="currentColor"></path>
                                </svg>
                                <a href={empresa.sitio_web} target="_blank" rel="noopener noreferrer">
                                    Visitar sitio web
                                </a>
                            </div>
                        )}
                    </div>
                </div>
            </div>

            <!-- Sección de atractivos si existen -->
            {atractivosFiltrados.length > 0 && (
                <div class="atractivos-seccion">
                    <div class="seccion-header">
                        <h2>Servicios Relacionados</h2>
                        {distritos.length > 0 && (
                            <FiltroUbicacion distritos={distritos} />
                        )}
                    </div>

                    <div class="grid-atractivos">
                        {atractivosFiltrados.map((atractivo) => (
                            <div class="card-atractivo">
                                {atractivo.img_url && (
                                    <img
                                        src={atractivo.img_url}
                                        alt={atractivo.nombre}
                                        class="imagen-atractivo"
                                    />
                                )}
                                <div class="card-content">
                                    <h3>{atractivo.nombre}</h3>
                                    {atractivo.descripcion && (
                                        <p class="descripcion">{atractivo.descripcion}</p>
                                    )}
                                    <div class="info-adicional">
                                        <span class="categoria">
                                            {obtenerNombreCategoria(atractivo.categoria_id)}
                                        </span>
                                        {atractivo.distrito && (
                                            <span class="distrito">{atractivo.distrito}</span>
                                        )}
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            )}
        </div>
    </section>
</MainLayout>

<style>
    .emergencia-detalle {
        background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);
        min-height: 100vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .empresa-header {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 3rem;
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .imagen-principal {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        height: 300px;
    }

    .imagen-principal img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .placeholder-empresa {
        width: 100%;
        height: 100%;
        background: #f3f4f6;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }

    .info-principal {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #6b7280;
    }

    .breadcrumb a {
        color: #dc2626;
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .badge-categoria.emergencia {
        background: #dc2626;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
        align-self: flex-start;
    }

    h1 {
        color: #1f2937;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .descripcion-principal {
        color: #6b7280;
        font-size: 1.125rem;
        line-height: 1.6;
        margin: 0;
    }

    .contacto-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
    }

    .contacto-info > div {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: #374151;
    }

    .contacto-info a {
        color: #dc2626;
        text-decoration: none;
    }

    .contacto-info a:hover {
        text-decoration: underline;
    }

    .atractivos-seccion {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .seccion-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .seccion-header h2 {
        color: #1f2937;
        font-size: 1.875rem;
        font-weight: 600;
        margin: 0;
    }

    .grid-atractivos {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .card-atractivo {
        background: #f9fafb;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-atractivo:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .imagen-atractivo {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-content {
        padding: 1.5rem;
    }

    .card-content h3 {
        color: #1f2937;
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
    }

    .descripcion {
        color: #6b7280;
        font-size: 0.875rem;
        line-height: 1.5;
        margin: 0 0 1rem 0;
    }

    .info-adicional {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .categoria, .distrito {
        background: #e5e7eb;
        color: #374151;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .empresa-header {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .imagen-principal {
            height: 200px;
        }

        h1 {
            font-size: 2rem;
        }

        .seccion-header {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
    }
</style> 