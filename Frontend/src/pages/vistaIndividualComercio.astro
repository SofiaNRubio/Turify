---
const { nombre, descripcion, imagen, link, contactoMensaje } = Astro.props;
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Navbar />
<main style="min-height: 80vh; background: #f6f4ec; padding: 0; font-family: 'Montserrat', Arial, sans-serif;">
  <h1 style="text-align: center; color: #22523b; font-size: 2.7rem; margin-top: 2.5rem; font-weight: 700; letter-spacing: 1px; font-family: 'Montserrat', Arial, sans-serif;">{nombre ?? 'Nombre de la Actividad'}</h1>
  <hr style="width: 60px; border: 2px solid #22523b; margin: 1rem auto 2.5rem auto; border-radius: 2px;" />
  <div style="display: flex; justify-content: center; align-items: flex-start; min-height: 250px; gap: 2rem;">
    <div style="background: #fff; border-radius: 16px; box-shadow: 0 2px 8px #0001; width: 290px; padding: 0; margin-bottom: 2rem; font-family: 'Montserrat', Arial, sans-serif; position: relative;">
      <button style="position: absolute; top: 10px; right: 10px; background: #22523b; color: #fff; border: none; border-radius: 6px; padding: 0.3em 0.8em; font-size: 0.9rem; font-weight: 500; cursor: pointer;">Agregar imagen</button>
      <img src={imagen ?? 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80'} alt={nombre ?? 'Imagen de la actividad'} style="width: 100%; height: 150px; object-fit: cover; border-top-left-radius: 16px; border-top-right-radius: 16px;" />
      <div style="padding: 1.1rem;">
        <h2 style="font-size: 1.15rem; margin: 0 0 0.5rem 0; color: #22523b; font-weight: 600;">{nombre ?? 'Nombre de la Actividad'}</h2>
        <p style="font-size: 1rem; color: #444; margin-bottom: 1.1rem;">{descripcion ?? 'Descripción de la actividad.'}</p>
        {link ? <a href={link} style="display: inline-block; background: #22523b; color: #fff; border-radius: 6px; padding: 0.45em 1.3em; text-decoration: none; font-size: 1rem; font-weight: 500; transition: background 0.2s;">Ver más</a> : null}
      </div>
    </div>
    <div style="display: flex; flex-direction: column; gap: 1rem; align-items: flex-start; justify-content: flex-start; margin-top: 1.5rem;">
      <button style="background: #22523b; color: #fff; border: none; border-radius: 6px; padding: 0.6em 1.2em; font-size: 1rem; font-weight: 600; cursor: pointer;">Agregar comercio</button>
      <!-- Aquí podrías agregar más acciones o formularios -->
    </div>
  </div>
  <div style="margin-top: 7rem; text-align: center;">
    <h2 style="color: #22523b; font-size: 1.4rem; margin-bottom: 0.5rem; font-weight: 700;">Contáctanos</h2>
    <p style="color: #444; font-size: 1.05rem; margin-bottom: 1.2rem;">{contactoMensaje ?? '¿Tienes alguna pregunta o necesitas ayuda para planificar tu visita? ¡Envíanos aquí tus consultas!'}</p>
    <button style="background: #22523b; color: #fff; border: none; border-radius: 6px; padding: 0.7em 1.7em; font-size: 1.05rem; font-weight: 600; cursor: pointer; font-family: 'Montserrat', Arial, sans-serif;">Enviar mensaje</button>
  </div>
</main>
<Footer />
